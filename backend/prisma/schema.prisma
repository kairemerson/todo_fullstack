// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Todo {
  id  Int @id @default(autoincrement())
  description String 
  isdone Boolean @default(false)
  created_at DateTime @default(now())
  @@map("todo")
}

model User {
  name String 
  email String @unique
  password String
  created_at DateTime @default(now())
  @@map("user")
}